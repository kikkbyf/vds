generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  image         String?
  role          String    @default("USER") // "ADMIN" | "USER"
  approved      Boolean   @default(false)
  lastActiveAt  DateTime? // Track last active time
  credits       Int       @default(50)
  creations     Creation[]
  savedPrompts  PromptTemplate[]
  creditLogs    CreditLog[]
  assetGroups   AssetGroup[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model CreditLog {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount        Int       // Positive (Add) or Negative (Spend)
  reason        String    // e.g. "Generation 4K", "Admin Adjustment"
  createdAt     DateTime  @default(now())
}

model Creation {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Generation Parameters (Snapshot for Remix)
  prompt        String
  negative      String?
  aspectRatio   String
  imageSize     String
  shotPreset    String?
  lightingPreset String?
  focalLength   Int?
  guidance      Float?
  
  // Assets
  inputImageUrls String[] // JSON string or array of paths in /uploads
  outputImageUrl String   // Path in /uploads
  
  // UX Grouping
  sessionId     String?   // For grouping multiple generations into one "Session"
  creationType  String?   // 'extraction' | 'digital_human' | 'standard'

  status        String    @default("SUCCESS")
  
  // Admin Content Control
  visible       Boolean   @default(true) 
  deletedAt     DateTime? 

  createdAt     DateTime  @default(now())
}

model PromptTemplate {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  name          String
  content       String    // The actual prompt text
  createdAt     DateTime  @default(now())
}
model SystemConfig {
  key           String    @id
  value         String
  updatedAt     DateTime  @updatedAt
}

model AssetGroup {
  id          String   @id @default(cuid())
  userId      String
  name        String   // Group name (e.g. "Hero Set 1")
  description String?
  
  // Storage for StandardAsset[] serialized as JSON
  // Includes system generated URLs and local uploaded Base64 (MVP)
  assets      Json     
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}
